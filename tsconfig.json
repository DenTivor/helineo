{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "devBuild",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src/",
    "paths": {
        "scripts/*": ["scripts/*"]
      },
    "jsx": "react",
  },
  "include": [
    "./src"
  ],
  "exclude": ["devBuild", "node_modules"]
}

